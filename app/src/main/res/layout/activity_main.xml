<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonHome"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_home"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonExercises"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_exercises"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/buttonTraining"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_training"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/buttonWorkout"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_workout"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonComplex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_complex"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/buttonOwnComplex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_own_complex"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>
